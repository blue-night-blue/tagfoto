<div id="<%= dom_id post %>">

  <div class="image">
    <% if post.images.attached? %>
      <%= link_to post.images[0] do %>
        <%= image_tag post.images[0].variant(:thumb).processed.url %>
      <% end %>
    <% end %>
  </div>


  <p>
    <strong>Comment:</strong>
    <%= post.comment %>
  </p>

</div>
