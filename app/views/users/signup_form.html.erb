<% if @user.errors.any? %>
  <div>
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>新規登録</h1>

<%= form_with(model: @user, url: signup_path) do |form|  %>

  <div>
    <%= form.label :name,"ユーザー名(半角)", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email,"Eメール", style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password,"パスワード", style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "新規登録" %>
  </div>
<% end %>

