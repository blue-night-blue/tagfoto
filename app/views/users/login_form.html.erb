
<h1>ログイン</h1>

<%= form_with(model: @user, url: login_path) do |form|  %>

  <div>
    <%= form.label :email,"Eメール", style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password,"パスワード", style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>

