<p style="color: green"><%= notice %></p>

<script src="/assets/edit_tag.js"></script>

<!-- <% content_for :head do %>
  <%= javascript_import_module_tag "edit_tag" %>
<% end %> -->



<% @tags.each do |tag| %>
  <input type="button" id="tag<%= tag.id %>" value="<%= tag.tag %>" name="<%= tag.tag %>" onclick="addTag('tag<%= tag.id %>');">
<% end %>

<br>


<%= form_with(model: @post) do |form| %>

  <div>
    <%= form.label :tag %>
    <%= form.text_area :tag, id:"tag", name:"tag" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>


<div>
  <%= link_to "back","/#{@current_user.name}" %>/
  <%= link_to "destroy", @post, method: :delete %>
</div>

<% if @post.images.attached? %>
  <%= link_to @post.images[0] do %>
    <%= image_tag @post.images[0] %>
  <% end %>
<% end %>

