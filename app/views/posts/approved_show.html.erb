<% provide(:title, "#{@user.name}(PhotoID:#{@post.id})") %>

<% content_for :head do %>
  <meta name="turbo-visit-control" content="reload">
  <%= javascript_import_module_tag "swipe" %>
<% end %>

<div class="container_post_navi">
  <%= link_to "一覧に戻る", "./" , class:"button button_link" %>
  <div>
    <% if @recent_photo_post %>
      <%= link_to "./#{@recent_photo_post.id}", class:"recent_photo" do %>
        <i class="fa-solid fa-right-long fa-flip-horizontal"></i>
        <span>new</span>
      <% end %>
    <% end %>
  </div>
  <div>
    <% if @old_photo_post %>
      <%= link_to "./#{@old_photo_post.id}", class:"old_photo" do %>
        <span>old</span>
        <i class="fa-solid fa-right-long"></i>
      <% end %>
    <% end %>
  </div>
</div>

<div>
  画像の左右スワイプにて前後移動が可能
</div>


<div class="container_flex">

  <div class="container_photo">
    <% if @post.images.attached? %>
      <%= link_to @post.images[0] do %>
        <%= image_tag @post.images[0] , class: "image_touch"  %>
      <% end %>
    <% end %>
  </div>

  <div class="container_form">

  <table id="tag_index_container">
      <tr>
          <th class="tag_index_group">グループ</th>
          <th class="tag_index_tag">タグ</th>
      </tr>

      <% @taggroups.each do |taggroup| %>
          <tr>
              <td class="tag_index_group">
                  <%= taggroup.group %>
              </td>

              <td class="tag_index_tag">
                  <% @tags_included_in_model.where(group:taggroup.id.to_s).each do |tag| %>
                      <%= link_to "#{tag.tag}", "/photo/#{@user.name}/tag/#{tag.tag}", class:"button button_tag" %>
                  <% end %>
              </td>
          </tr>
      <% end %>

      <tr>
          <td class="tag_index_group">
              なし
          </td>

          <td class="tag_index_tag">
              <% @tags_included_in_model.where(group:"").each do |tag| %>
                  <%= link_to "#{tag.tag}", "/photo/#{@user.name}/tag/#{tag.tag}", class:"button button_tag" %>
              <% end %>
          </td>
      </tr>

  </table>


      <div>コメント</div>
      <div><%= @post.comment %></div>

    
  </div>

</div>

