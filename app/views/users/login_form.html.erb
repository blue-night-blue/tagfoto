<% provide(:title, "ログイン") %>


<h1>ログイン</h1>

<div class="container_simple_form">

  <%= form_with(model: @user, url: login_path) do |form|  %>

    <div>
      <%= form.label :email,"Eメール" %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :password,"パスワード" %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.submit "ログイン" %>
    </div>
  <% end %>

</div>
