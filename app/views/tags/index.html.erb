<%= search_form_for @search do |f| %>
  <div>
    <%= f.label :tag_cont, "タグ" %>
    <%= f.search_field :tag_cont %>
  </div>
  <div>
  <%= f.label :group_cont, "グループ" %>
  <%= f.search_field  :group_cont %>
  </div>
  <%= f.submit "検索" %>
  <%= link_to "クリア", tags_path, class:"button_clear" %>
<% end %>

<%= turbo_frame_tag "cats-list" do %>
<div id="tags">
  <div class="table_forms">
    <div class="table_input"><%= render "form", tag: @tag %></div>
  </div>
  
  
  <% @tags.each do |tag| %>
    <div class="table_forms">
      <div class="table_input"><%= render "form", tag: tag %></div>
      <div class="table_delete"><%= button_to "削除", tag, method: :delete %></div>
    </div>
  <% end %>
</div>
<% end %>

